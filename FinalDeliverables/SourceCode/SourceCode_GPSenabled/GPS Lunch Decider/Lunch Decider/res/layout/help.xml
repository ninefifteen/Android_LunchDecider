<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/help_background">

	<TextView android:text="@string/help_content_title"
		android:id="@+id/textView1" android:layout_width="wrap_content"
		android:textColor="#000000" android:textSize="18dip" 
		android:layout_weight="1" android:layout_height="0dip" />
	<ScrollView android:layout_height="0dip"
		android:layout_width="fill_parent" android:id="@+id/scrollView1"
		android:layout_weight="6">

		<LinearLayout android:layout_height="match_parent"
			android:layout_width="fill_parent" android:id="@+id/linearLayout2">
			<TextView android:text="@string/help_content" android:id="@+id/textView1"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:textColor="#000000" />
		</LinearLayout>

	</ScrollView>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout1" android:layout_height="0dip"
		android:layout_weight="1" android:padding="4dip">
		<Button android:text="Back" android:id="@+id/help_back"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
